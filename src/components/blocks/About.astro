---
// ABOUTME: About Me section component displaying personal bio and background information
// ABOUTME: Uses i18n for Spanish and English translations with responsive grid layout
import { useTranslations, type Language } from '@/i18n/utils';

const currentLang: Language = (Astro.currentLocale as Language) || 'es';
const t = useTranslations(currentLang);
---

<section id="about" class="py-20">
  <div class="container mx-auto max-w-6xl px-6">
    <div class="text-center">
      <h2 class="mb-4 text-3xl font-bold text-foreground md:text-4xl">
        {t('about.title')}
      </h2>
    </div>

    <div class="mt-12 grid grid-cols-1 gap-8 md:grid-cols-2">
      <!-- Left: Bio text -->
      <div class="flex flex-col gap-6">
        <p class="text-lg leading-relaxed text-muted-foreground">
          {t('about.intro')}
        </p>
        <p class="text-lg leading-relaxed text-muted-foreground">
          {t('about.background')}
        </p>
        <p class="text-lg leading-relaxed text-muted-foreground">
          {t('about.currentFocus')}
        </p>
      </div>

      <!-- Right: Highlights/Visual element -->
      <div class="flex items-center justify-center">
        <div class="rounded-lg bg-muted/30 p-8">
          <div class="flex flex-col gap-4">
            <div class="flex items-center gap-3">
              <div class="h-2 w-2 rounded-full bg-primary"></div>
              <span class="text-sm font-medium text-foreground">GenAI</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="h-2 w-2 rounded-full bg-primary"></div>
              <span class="text-sm font-medium text-foreground">{t('hero.agents')}</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="h-2 w-2 rounded-full bg-primary"></div>
              <span class="text-sm font-medium text-foreground">LLMs</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="h-2 w-2 rounded-full bg-primary"></div>
              <span class="text-sm font-medium text-foreground"
                >{t('hero.emergingTechnologies')}</span
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
