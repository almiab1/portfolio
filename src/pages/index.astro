---
import Base from "../layouts/BaseLayout.astro";
import Hero from "@/components/blocks/Hero.astro";
import { ldPerson, ldWebsite, ldCreativeWork, ldBlogPosting, ldEvent } from "@/lib/schema";
import ProjectGrid from "@/components/blocks/ProjectGrid.astro";

const jsonLd = [ldPerson(), ldWebsite(), ldCreativeWork({ title: "Construyendo productos con IA generativa y sistemas de agentes" }), ldBlogPosting({ title: "Construyendo productos con IA generativa y sistemas de agentes", date: "2025-01-01" }), ldEvent({ name: "Construyendo productos con IA generativa y sistemas de agentes", startDate: "2025-01-01" })];
---

<Base title="Alejandro Mira — GenAI & Agentes LLM" description="Porfolio, proyectos y artículos.">

  {jsonLd.map((o: any) => <script type="application/ld+json">{JSON.stringify(o)}</script>)}

  <main class="min-h-screen">
    <Hero />
    <section id="work" class="scroll-mt-24"><ProjectGrid limit={6} moreHref="/work" /></section>
  </main>
</Base>
